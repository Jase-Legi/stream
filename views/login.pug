extends loginlayout

block content
    //=localmsg = msg
    if msg === 'doorclosed'
        #usrsignuploginiconbutton(tabindex="-1")
            #usrsignuploginiconbuttoncont
                img( src="images/iibanc resources/icons/usricon.svg")
        #usrlogincontainerbox(tabindex="-1")
            #signupbutton.loginout(tabindex="-1",class=msg,title='Click to create new account.')
                #signupbuttoncont
                    p Sign Up         
                    
            #logintoplatfrmpbutton.loginout(class=msg,title='Click to login.')
                #logintoplatfrmpbuttoncont
                    p Log in
        
        #loginwrapppp(class=(loginnow?'wrappppactive':'wrappppinactive'))
            #loginpopout
            #close_modal_login
                #xdiv
                    h1 X
            #login_to_memberprofle
                fieldset#formm(style='border:none;')
                    h2#formtitle(style = 'clear:both;margin:10px auto;') SIGN IN
                    input#loginmembremail(name='email',type='text',placeholder='Email',style='margin:10px 0px;width:90%;height:30px;')
                    input#loginmembrpassword(name='password',type='password',placeholder='password',style='margin:10px 0px;width:90%;height:30px;color:#cccccc;')
                    #signinmemberbutton(style='display:block;',rel='users/login/')
                        .signinmemberbutton
                            p(style="margin:0px;padding:0px;") SUBMIT 

        #wrapppp.wrappppinactive
            #loginpopout
            #close-modal-sign-up
                #xdiv
                    h1 X
            #newmember
                fieldset#formm(style='border:none;')
                    h2#formtitle(style = 'clear:both;margin:10px auto;') SIGN UP
                    input#inputFirstname(type='text',placeholder='First Name',style='margin:10px 0px;width:90%;height:30px;')
                    input#inputLastname(name='Lastname', type='text',placeholder='Last Name',style='margin:10px 0px;width:90%;height:30px;')
                    input#inputemail(name='email',type='text',placeholder='Email',style='margin:10px 0px;width:90%;height:30px;')
                    input#inputpassword(name='password',type='password',placeholder='password',style='margin:10px 0px;width:90%;height:30px;color:#cccccc;')
                    #addmemberbutton.admbmbufferclass
                        #addmbackid.addmemberbutton
                            p(style="margin:0px;padding:0px;") Signup
        //#wrapppp.wrappppinactive
            #loginpopout
            #close-modal-sign-up
                #xdiv
                    h1 X
            #newmember
                fieldset#formm(style='border:none;')
                    h2#formtitle(style = 'clear:both;margin:10px auto;') Inventor Sign Up
                    input#id(name="ID",type='file',placeholder='ID',style='margin:10px 0px;width:90%;height:30px;')
                    input#ein(name="EIN",type='password',placeholder='EIN',style='margin:10px 0px;width:90%;height:30px;')
                    input#inputFirstname(type='text',placeholder='First Name',style='margin:10px 0px;width:90%;height:30px;')
                    input#inputLastname(name='Lastname', type='text',placeholder='Last Name',style='margin:10px 0px;width:90%;height:30px;')
                    input#inputemail(name='email',type='text',placeholder='Email',style='margin:10px 0px;width:90%;height:30px;')
                    input#inputpassword(name='password',type='password',placeholder='password',style='margin:10px 0px;width:90%;height:30px;color:#cccccc;')
                    #addmemberbutton.admbmbufferclass
                        #addmbackid.addmemberbutton
                            p(style="margin:0px;padding:0px;") Signup

    else
        #usrsignuploginiconbutton(tabindex="-1")
            #usrsignuploginiconbuttoncont
                img( src="images/iibanc resources/icons/usricon(dooropen).svg")
        #usrlogincontainerbox(tabindex="-1")
            #logoutbutton(class=msg,title='Click to log out.')
                #logoutbuttoncont
                    p Log out
    
    script(src = '/javascripts/login-effs.js')