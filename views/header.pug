extends headerlayout

block content
    if msg == 'dooropen'
        -srcc = 'images/iibanc resources/logo alternates/iibanc2.svg'
    else
        -srcc = 'images/iibanc resources/logo alternates/iibanc.svg'
        
        
    #headrwrapper
        
        #header
            a(href="#",rel="/", id="logoheader")
                img#legilogo(height='100%', src=srcc)

            #menuheader
                .buttoncontt
                    include login
                #menusymbol
                    .bar1.barrr
                    .bar2.barrr
                    .bar3.barrr
            #menupopout
                #menucont
                .menue-item
                    #closemenu.close-item
                        h1(style="font-size:20px;cursor:pointer;") x
                
                a#AboutUS.menue-item(rel="/about", href="#")
                    h1 About us
                a#investorlink.menue-item(rel="/investors", href='#')
                    h1 Top Investors
                .menue-item
                    h1 Find a Startup
    #spaceitoutdivtomakesurpageloawer(style="margin:0px 0px 70px 0px;")

    if mypageurl == '/'
        include index
    script(src = '/javascripts/header-effs.js')
    script(src = '/javascripts/global.js')